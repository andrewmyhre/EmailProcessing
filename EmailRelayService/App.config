<?xml version="1.0"?>
<configuration>
    <configSections>
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
        <section name="emailProcessing" type="EmailProcessing.EmailProcessingConfigurationSection, EmailProcessing" />
    </configSections>

    <emailProcessing
        pickupLocation="c:\blessthewebmail\pickup"
        failedLocation="c:\blessthewebmail\failed"
        deliveredLocation="c:\blessthewebmail\delivered"
        templateLocation="d:\mail\templates">
        <emailSender type="EmailProcessing.AmazonSESEmailSender, EmailProcessing" />
        <amazon key="1DDW85JA94AHBN3YX6G2" secret="XrwoionOEP5Dk2sKwoTMz+NuWHanEQ9nvIOkO0jE" />
    </emailProcessing>
    
    <log4net>
        <appender name="EventLogAppender" type="log4net.Appender.EventLogAppender" >
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
            </layout>
        </appender>
        <appender name="FileAppender" type="log4net.Appender.FileAppender">
            <file value="log.txt"/>
            <appendToFile value="false"/>
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date %-5level %logger - %message%newline"/>
            </layout>
        </appender>
        <root>
            <level value="WARN"/>
            <appender-ref ref="FileAppender"/>
            <appender-ref ref="EventLogAppender"/>
        </root>
    </log4net>
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/></startup></configuration>
